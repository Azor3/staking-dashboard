# Database URL
DATABASE_URL=postgresql://user:password@localhost:5432/ponder

# RPC URL
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Chain ID (1=mainnet, 11155111=sepolia, 17000=holesky, 31337=anvil)
CHAIN_ID=1

# Contract Addresses
ATP_FACTORY_ADDRESS=0x...
ATP_FACTORY_AUCTION_ADDRESS=0x...
STAKING_REGISTRY_ADDRESS=0x...
ROLLUP_ADDRESS=0x...

# Indexer Settings
START_BLOCK=0

# Application
NODE_ENV=development
LOG_LEVEL=info

# For comparing data from old indexer to ponder (used in scripts/compare-database.ts)
OLD_DATABASE_URL="postgresql://user:password@localhost:5432/old-indexer-database?schema=public"
NEW_DATABASE_URL="postgresql://user:password@localhost:5432/ponder-indexer-database?schema=public"
NETWORK_SCHEMA="mainnet2"